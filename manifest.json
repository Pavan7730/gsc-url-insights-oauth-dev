{
  "manifest_version": 3,
  "name": "GSC URL Insights",
  "description": "View Google Search Console insights for the current page.",
  "version": "0.1.5",

  "permissions": [
    "identity",
    "storage",
    "tabs"
  ],

  "host_permissions": [
    "https://www.googleapis.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "oauth2": {
    "client_id": "669869853203-la12753n1ac5u8m5apt26fmgcnliprq0.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/webmasters.readonly"
    ]
  }
}
